{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "pkfrspot": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "subPath": "en"
        },
        "locales": {
          "de": {
            "translation": "src/locale/messages.de.xlf",
            "subPath": "de"
          },
          "de-CH": {
            "translation": "src/locale/messages.de-CH.xlf",
            "subPath": "de-CH"
          },
          "it": {
            "translation": "src/locale/messages.it.xlf",
            "subPath": "it"
          },
          "fr": {
            "translation": "src/locale/messages.fr.xlf",
            "subPath": "fr"
          },
          "es": {
            "translation": "src/locale/messages.es.xlf",
            "subPath": "es"
          },
          "nl": {
            "translation": "src/locale/messages.nl.xlf",
            "subPath": "nl"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "optimization": {
              "styles": {
                "inlineCritical": false
              }
            },
            "localize": ["en", "de", "de-CH", "it", "fr", "es", "nl"],
            "outputPath": "dist/pkfrspot",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js", "@angular/localize/init"],
            "tsConfig": "tsconfig.app.json",
            "sourceMap": true,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.webmanifest",
              "src/robots.txt",
              "src/sitemap.xml"
            ],
            "styles": [
              "node_modules/swiper/swiper-bundle.css",
              "node_modules/@videogular/ngx-videogular/fonts/videogular.css",
              "src/theming/m3-theme.scss",
              "src/styles.scss"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "firebase",
              "@firebase/app",
              "firebase/app",
              "@firebase/database",
              "@firebase/firestore",
              "@firebase/functions",
              "@firebase/performance",
              "@firebase/remote-config",
              "@angular/fire",
              "@angular/fire/firestore",
              "dialog-polyfill"
            ],
            "server": "src/main.server.ts",
            "prerender": {
              "routesFile": "routes.txt",
              "discoverRoutes": false
            },
            "ssr": {
              "entry": "server.ts"
            }
          },
          "configurations": {
            "dev": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ],
              "optimization": false,
              "localize": ["de"],
              "baseHref": "/de/"
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "optimization": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb",
                  "maximumError": "4kb"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },

        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "dev": {
              "buildTarget": "pkfrspot:build:dev"
            },
            "staging": {
              "buildTarget": "pkfrspot:build:staging"
            },
            "production": {
              "buildTarget": "pkfrspot:build:production"
            }
          },
          "defaultConfiguration": "dev"
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "buildTarget": "pkfrspot:build:dev",
            "format": "xlf2",
            "outputPath": "src/locale",
            "targetFiles": [
              "messages.de.xlf",
              "messages.de-CH.xlf",
              "messages.it.xlf",
              "messages.fr.xlf",
              "messages.es.xlf",
              "messages.nl.xlf"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "5ba466b0-10a6-4c49-9de2-9bed548e9520"
  }
}
