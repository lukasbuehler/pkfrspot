{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "pkfrspot": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "baseHref": "/en/"
        },
        "locales": {
          "de": {
            "translation": "src/locale/messages.de.xlf",
            "baseHref": "/de/"
          },
          "de-CH": {
            "translation": "src/locale/messages.de-CH.xlf",
            "baseHref": "/de-CH/"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "localize": ["en", "de", "de-CH"],
            "outputPath": "dist/pkfrspot",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js", "@angular/localize/init"],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.webmanifest",
              "src/robots.txt",
              "src/sitemap.xml"
            ],
            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/croppie/croppie.css",
              "node_modules/swiper/swiper-bundle.css",
              "node_modules/@videogular/ngx-videogular/fonts/videogular.css",
              "src/theming/m3-theme.scss",
              "src/styles.scss"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": [
              "firebase",
              "@firebase/app",
              "firebase/app",
              "@firebase/database",
              "@firebase/firestore",
              "@firebase/functions",
              "@firebase/performance",
              "@firebase/remote-config",
              "@angular/fire",
              "@angular/fire/firestore",
              "dialog-polyfill"
            ],
            "server": "src/main.server.ts",
            "prerender": {
              "routesFile": "routes.txt",
              "discoverRoutes": false
            },
            "ssr": {
              "entry": "server.ts"
            }
          },
          "configurations": {
            "development": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.development.ts"
                }
              ],
              "outputHashing": "none",
              "optimization": true,
              "sourceMap": true,
              "localize": ["de-CH"],
              "baseHref": "/de-CH/"
            },
            "staging": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.staging.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb",
                  "maximumError": "4kb"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },

        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "development": {
              "buildTarget": "pkfrspot:build:development"
            },
            "staging": {
              "buildTarget": "pkfrspot:build:staging"
            },
            "production": {
              "buildTarget": "pkfrspot:build:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "browserTarget": "pkfrspot:build",
            "format": "xlf2",
            "outputPath": "src/locale",
            "targetFiles": ["messages.de.xlf", "messages.de-CH.xlf"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "5ba466b0-10a6-4c49-9de2-9bed548e9520"
  }
}
