{
  "name": "pkfrspot",
  "version": "1.0.0",
  "scripts": {
    "start": "ng serve",
    "serve": "ng serve",
    "serve:ssr": "LOCAL=true node dist/parkour-base-angular/server/server.mjs",
    "dev": "ng serve --watch",
    "watch": "ng build --watch",
    "build": "which ng && npx ng build",
    "build:dev": "ng build --configuration=development",
    "build:prod": "ng build --configuration=production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy:test:hosting": "firebase use test && ng build --configuration=test && firebase deploy --only hosting",
    "deploy:prod:hosting": "firebase use prod && ng build --configuration=production && firebase deploy --only hosting",
    "deploy:test:rules": "firebase use test && firebase deploy --only firestore:rules",
    "deploy:prod:rules": "firebase use prod && firebase deploy --only firestore:rules",
    "deploy:test:functions": "firebase use test && cd ../functions && npm run build && firebase deploy --only functions",
    "deploy:prod:functions": "firebase use prod && cd ../functions && npm run build && firebase deploy --only functions"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.2",
    "@angular/cdk": "^18.0.2",
    "@angular/common": "^18.0.2",
    "@angular/compiler": "^18.0.2",
    "@angular/core": "^18.0.2",
    "@angular/fire": "^18.0.1",
    "@angular/forms": "^18.0.2",
    "@angular/google-maps": "^18.0.2",
    "@angular/localize": "^18.0.2",
    "@angular/material": "^18.0.2",
    "@angular/platform-browser": "^18.0.2",
    "@angular/platform-browser-dynamic": "^18.0.2",
    "@angular/platform-server": "^18.0.2",
    "@angular/router": "^18.0.2",
    "@angular/service-worker": "^18.0.2",
    "@angular/ssr": "^18.0.3",
    "@firebase/firestore": "^4.6.1",
    "@videogular/ngx-videogular": "^8.0.0",
    "bootstrap": "^5.3.0",
    "croppie": "^2.6.5",
    "express": "^4.18.2",
    "firebase": "^9.23.0",
    "i18n-iso-countries": "^7.6.0",
    "rxjs": "^7.8.1",
    "swiper": "^9.3.2",
    "timers": "^0.1.1",
    "typesense": "^1.7.2",
    "uuid": "^10.0.0",
    "xml2js": "^0.6.0",
    "zone.js": "^0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.3",
    "@angular-devkit/core": "^18.0.3",
    "@angular/cli": "^18.0.3",
    "@angular/compiler-cli": "^18.0.2",
    "@angular/language-service": "^18.0.2",
    "@types/core-js": "^2.5.5",
    "@types/croppie": "^2.6.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.18.0",
    "@types/xml2js": "^0.4.9",
    "sass": "^1.63.3",
    "typescript": "5.4"
  }
}
